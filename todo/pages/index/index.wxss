/* pages/index/index.wxss */
.tips{
  padding: 150rpx 15rpx;
  font-size: 36rpx;
  color: #999;
  text-align: center;
}

/* 待办列表 */
.todo-list{
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  margin: 15rpx;
}
/* 待办子项 */
.todo-list__item{
  padding: 0 15rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}
.todo-list__item__inner{
  flex: 1;
  margin-left: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #eee;
}
.todo-list__item__time{
  font-size: 26rpx;
  padding: 5rpx 0;
  color: #777;
}
/* 待办子项 - 完成状态 */
.todo-list__item--done{
  opacity: .8;
}
.todo-list__item--done .todo-list__item__text{
  color: #999;
}
.todo-list__item--done .todo-list__item__time{
  color: #999;
}